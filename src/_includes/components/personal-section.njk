<div id="personal-section" class="pane">
  <h3 class="text-2xl mb-2">Personal</h3>
  <fieldset>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-6 mb-4">
      {{ inputs.number("annual-income", "Annual Net Income", 63000) }}
      {{ inputs.number("ownership-time", "Ownership Duration (Years)", 8) }}
      {{ inputs.number("annual-mileage", "Expected Annual Mileage", 10000) }}
    </div>

    <h4 class="text-xl mb-2">Units</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-6 mb-2">
      {{
        inputs.preferenceDropdown(
        "preference-distance",
        "Distance",
        [{value: "miles"}, {value: "kilometers"}]
        )
      }}

      {{
        inputs.preferenceDropdown(
        "preference-volume",
        "Volume",
        [{value: "gallons"}, {value: "litres"}]
        )
      }}

      {{
        inputs.preferenceDropdown(
        "preference-currency",
        "Currency",
        [{value: "dollars"}, {value: "euros"}, {value: "yen"}, {value: "pounds"}]
        )
      }}
    </div>
  </fieldset>
</div>
